<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:id="@+id/imageViewFragmentDetali"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textTimeFragmentDetail"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_alignBottom="@+id/imageViewFragmentDetali"
        android:layout_toRightOf="@+id/imageViewFragmentDetali"
        android:layout_toEndOf="@+id/imageViewFragmentDetali" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/taskTextFragmentDetail"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textTimeFragmentDetail"
        android:layout_toEndOf="@+id/textTimeFragmentDetail" />
</RelativeLayout>